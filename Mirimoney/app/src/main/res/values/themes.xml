<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mirimoney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0000ff</item>
        <item name="colorPrimaryVariant">#0000ff</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Text">
        <item name="android:fontFamily">@font/space_var</item>
    </style>
    <style name="Text.Regular">
        <item name="android:textSize">56px</item>
        <item name="fontWeight">400</item>

    </style>
    <style name="Text.Balance">
        <item name="android:textSize">148px</item>
        <item name="fontWeight">900</item>
    </style>
</resources>